<Window x:Class="CodeReview.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding IncidentTitle, UpdateSourceTrigger=PropertyChanged}" Height="700" Width="700"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        Icon="icon_code_check.ico"
        FontSize="{Binding FontSize}"
        xmlns:CodeReview="clr-namespace:CodeReview">
    <Window.Resources>
        <Style x:Key="GroupHeaderStyle" TargetType="{x:Type GroupItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupItem}">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontStyle="Italic" FontWeight="Bold" Padding="5,5,5,5" Background="LightBlue" FontSize="16"/>
                            <ItemsPresenter/>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="92*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" AutoGenerateColumns="false"
              Name="IncidentDataGrid"
              HorizontalAlignment="Left"
              VerticalAlignment="Top" CanUserAddRows="False" 
              IsReadOnly="True" SelectionMode="Extended" 
              FontFamily="{Binding ElementName=cmbxFontFamily, Path=SelectedItem}">
            <DataGrid.GroupStyle>
                <GroupStyle ContainerStyle="{StaticResource GroupHeaderStyle}">
                    <GroupStyle.Panel>
                        <ItemsPanelTemplate>
                            <DataGridRowsPresenter Width="{Binding RelativeSource={RelativeSource Self}}">
                            </DataGridRowsPresenter>
                        </ItemsPanelTemplate>
                    </GroupStyle.Panel>
                </GroupStyle>
            </DataGrid.GroupStyle>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <ContextMenu.ItemContainerStyle>
                        <Style TargetType="{x:Type MenuItem}">
                            <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}, Path=PlacementTarget.SelectedItems}"/>
                        </Style>
                    </ContextMenu.ItemContainerStyle>
                    <MenuItem Header="Difference" Command="{Binding FileDiff}"/>
                    <MenuItem Header="Group by" Name="GroupByOptionsMenu" >
                        <MenuItem Header="Comments" Name="Comments" Click="MenuItem_Click"/>
                        <MenuItem Header="File" Name="Filename" Click="MenuItem_Click"/>
                        <MenuItem Header="File type" Name="FileType" Click="MenuItem_Click"/>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.InputBindings>
                <KeyBinding Key="d" Modifiers="Control" Command="{Binding FileDiff}" CommandParameter="{Binding ElementName=IncidentDataGrid, Path=SelectedItems}"/>
            </DataGrid.InputBindings>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Filename}" Header="Filename" Width="40*"/>
                <DataGridTextColumn Binding="{Binding Path=CheckOutChangeSet}" Header="Checked Out" Width="5*"/>
                <DataGridTextColumn Binding="{Binding Path=CheckInChangeSet}" Header="Checked In" Width="5*" SortDirection="Descending"/>
                <DataGridTextColumn Binding="{Binding Path=DevBranch}" Header ="DevBranch" Width="5*"/>
                <DataGridTextColumn Binding="{Binding Path=Comments}" Header ="Comments" Width="45*">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Author}" Header="Author" Width="10*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1" Margin="0,0,0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>
            <!-- MinWidth="{Binding Width, RelativeSource={RelativeSource AncestorType={x:Type Grid}}}" -->
            <ListBox Grid.Column="1" Name="scrlViewStatusMessages" ItemsSource="{Binding StatusMessageList, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" FontFamily="{Binding ElementName=cmbxFontFamily, Path=SelectedItem}"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock>
                    <Hyperlink Name="IncidentURLLink" NavigateUri="{Binding IncidentURL, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Command="{Binding OpenIncidentURL}" CommandParameter="{Binding ElementName=IncidentURLLink, Path=NavigateUri}">
                        <Label Content="Case ID :"/>
                    </Hyperlink> 
                </TextBlock>
                <ComboBox Grid.Column="0" HorizontalAlignment="Left" FontFamily="{Binding ElementName=cmbxFontFamily, Path=SelectedItem}"
                      Name="cmbxIncidentNo" 
                      MinWidth="200"
                      Width="{Binding Path=ColumnDefinition[0].Width, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Grid},AncestorLevel=1}}"
                      ItemsSource="{Binding IncidentNoCollection, Mode=OneWay, UpdateSourceTrigger=Propertychanged}"
                      Text="{Binding IncidentNo, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}"
                      FontSize="{Binding FontSize}"
                      IsEditable="True"
                      IsReadOnly="False"
                      IsEnabled="{Binding EnableComboBox, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Margin="0,0,0,30">
                <ComboBox.InputBindings>
                    <KeyBinding Key="Return" Command="{Binding GetIncident}"/>
                </ComboBox.InputBindings>
            </ComboBox>
            </StackPanel>
            <ComboBox Grid.Column="2" HorizontalAlignment="Right" Width="{Binding Path=Width, RelativeSource={RelativeSource Self}}" MinWidth="100"
                      IsEditable="False" IsReadOnly="True" Name="cmbxFontFamily" ItemsSource="{Binding FontFamilyCollection}"
                      Text="{Binding FontName, Mode=OneWay}" Margin="0,0,0,30">
            </ComboBox>
            <TextBlock Grid.Column="3" MinWidth="20" Width="{Binding Path=Width, RelativeSource={RelativeSource Self}}" Margin="0,0,0,30">
                    <Label Content="Size :"/>
                    <TextBox Name="txtFontSize" Text="{Binding FontSize, Mode=TwoWay}"/>
                <TextBlock.InputBindings>
                    <KeyBinding Key="Return" Command="{Binding SetFontSize}" CommandParameter="{Binding ElementName=txtFontSize, Path=Text}"/>
                </TextBlock.InputBindings>
            </TextBlock>
            <TextBlock Grid.Column="4" HorizontalAlignment="Right" Margin="0,0,0,30" FontFamily="{Binding ElementName=cmbxFontFamily, Path=SelectedItem}">
                <Label Content="Association Count:"/>
                <TextBox Text="{Binding IncidentAssociationCount, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" IsReadOnly="True"/>
            </TextBlock>
        </Grid>
    </Grid>
</Window>