<Window x:Class="FindString.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CodeReview" Height="700" Width="700">
    <Grid>
        <DataGrid AutoGenerateColumns="false"
              Name="IncidentDataGrid"
              HorizontalAlignment="Left"
              VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Filename}" Header="Filename" MinWidth="50" Width="60*"/>
                <DataGridTextColumn Binding="{Binding Path=DevBranch}" Header ="DevBranch" MinWidth="50" Width="10*"/>
                <DataGridTextColumn Binding="{Binding Path=Comments}" Header ="Comments" MinWidth="50" Width="30*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Okay test" Click="Button_Click" RenderTransformOrigin="0.511,0.622" Margin="0,271,0,0"/>
    </Grid>
</Window>
